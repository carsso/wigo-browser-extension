{
    "manifest_version": 3,
    "name": "Wigo Monitoring",
    "short_name": "Wigo Monitoring",
    "description": "This is the Chrome extension for Wigo. Wigo, aka \"What Is Going On\" is a light pull/push monitoring tool written in Golang.",
    "homepage_url": "https://github.com/root-gg/wigo",
    "author": "Root.gg",
    "version": "0.2.3",
    "options_page": "options.html",
    "permissions": [
        "alarms",
        "storage",
        "offscreen"
    ],
    "background": {
        "service_worker": "service_worker.js"
    },
    "icons": {
        "16": "wigo.png",
        "48": "wigo.png",
        "128": "wigo.png"
    },
    "action": {
        "default_icon": "wigo.png",
        "default_popup": "popup.html",
        "options_page": "options.html"
    },
    "content_security_policy": {},
    "host_permissions": [
        "http://*/*",
        "https://*/*"
    ]
}